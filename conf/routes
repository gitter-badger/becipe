# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           						controllers.Application.index
GET     /aboutUs                           					controllers.Application.aboutUs

# Recipe
POST	/recipe/search										controllers.RecipeController.search
GET		/recipe/search										controllers.Application.redirectToIndex
# POST	/recipe/by											controllers.RecipeController.by(categories: List[String])
GET		/recipe/:id											controllers.RecipeController.get(id: String)

# Signup
GET		/signup												controllers.Application.signup
POST	/signup												controllers.Application.submitSignup
GET		/signup/thank-you/:name								controllers.Application.signupThankyou(name: String)

# Javascript routing
GET     /assets/javascripts/routes          				controllers.Application.javascriptRoutes

# Map static resources from the /public folder 
# to the /assets URL path
GET     /assets/*file               						controllers.Assets.at(path="/public", file)
GET     /webjars/*file              						controllers.WebJarAssets.at(file)
GET     /*file												controllers.Assets.at(path="/public", file)
